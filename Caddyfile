{
    # Global options: Use internal CA for all sites by default
    # This prevents Caddy from trying to reach Let's Encrypt for .net domains
    local_certs
}

network.dblocks.net {
    tls internal
    reverse_proxy 10.0.0.5:1024
} 

adblock.dblocks.net {
    tls internal
    redir / /admin/login 302
    reverse_proxy 10.0.0.5:1025
} 

git.dblocks.net {
    tls internal
    reverse_proxy 10.0.0.5:1026
}

build.dblocks.net {
    tls internal
    reverse_proxy 10.0.0.5:1027
}

speed.dblocks.net {
    tls internal
    reverse_proxy 10.0.0.5:1028
}

docker.dblocks.net {
    tls internal
    reverse_proxy https://10.0.0.5:1029 {
        transport http {
            tls_insecure_skip_verify
        }
    }
}
